<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:theme="@style/Theme.LiteNote.AppWidgetContainer"
    android:orientation="vertical">

    <!--内容区-->

    <LinearLayout

        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/background"
        android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/kd_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingRight="30dp"

        android:background="@drawable/back"

        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/code_1_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/code_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text=" "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_2_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/code_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text=" "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_3_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/code_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text=" "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_4_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/code_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text=" "/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currImg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingStart="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/kd"
            android:layout_weight="1"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取件码"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            />



    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView
            android:layout_width="match_parent"
            android:text="取件码"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_height="match_parent">


        </TextView>

    </LinearLayout>
</LinearLayout>